<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/userfeeds_ads_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/userfeeds_ads_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/userfeeds_ads_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/userfeeds_ad_background"
        android:gravity="center"
        android:textColor="@color/userfeeds_ad_text_color"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/userfeeds_ads_details_panel"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ethereum"
            android:gravity="center"
            android:text="ETH"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/userfeeds_ad_probability"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#c2f9c2"
            android:gravity="center"/>

    </LinearLayout>

</FrameLayout>
